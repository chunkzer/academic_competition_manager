.container
  .row
    .col-md-12
      .page-header
        h1.col-md-12.text-center Sistema UniConc
  .col-md-12
    form.form.col-md-8.col-md-offset-4(ng-submit='formSubmit()')
      .col-md-6
        .form-group
          input.form-control(type='text', ng-model='username', placeholder='Correo Electronico', required='')
        .form-group
          input.form-control(type='password', ng-model='password', placeholder='Contraseña', required='')
        .form-group
          button.btn.btn-success.pull-left(type='submit') Iniciar Sesión
          button.btn.btn-primary.pull-right(type='submit') Nuevo Usuario
          span.text-danger {{ error }}
