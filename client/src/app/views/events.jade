div
  acme-navbar
  div.container
    div.pull-left
      input(type="text" placeholder="Busqueda" ng-model="query")
      button.btn.btn-default(ng-click="searchQuery()")
        span( class="glyphicon glyphicon-search")
    button.btn.btn-default.orange-button.pull-right(ng-if="userIsAdmin" ng-click="newEvent()")
      p Nuevo Evento
    div.alert.no-subscriptions(align="center" ng-hide="events.length > 0") 
      h2 No hay eventos cercanos
    div.alert.no-subscriptions(align="center" ng-show="events.length > 0") 
      h2 Eventos
    div.row.page-header(style="margin: 0px;")
      div.col-xs-6.col-md-6(align="left")
        button#previous-page-button.btn.btn-default(ng-click="previousPage()")
          span.glyphicon.glyphicon-menu-left
      div.col-xs-6.col-md-6(align="right")
        button#next-page-button.btn.btn-default.pull-right(ng-click="nextPage()")
          span.glyphicon.glyphicon-menu-right
      
    div.item-list
      event-item( ng-repeat="item in events" event="item")
